<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/gradient_setting"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_head_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="MUSIC MAKER"
        android:textColor="#22B0F1"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tv_setting"
        app:layout_constraintTop_toBottomOf="@id/tv_head_setting"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="SETTINGS"
        android:textSize="36dp"
        android:textColor="#048CF8"
        android:layout_marginBottom="40dp"/>


    <LinearLayout
        android:id="@+id/layout_control"
        app:layout_constraintTop_toBottomOf="@id/tv_setting"
        app:layout_constraintLeft_toLeftOf="parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="3">

    <TextView
        android:textColor="#173AF8"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="30dp"
        android:text="CHANGE SOUNDS"
        android:layout_weight="2"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

</LinearLayout>


    <LinearLayout
        android:id="@+id/beat_1"
        app:layout_constraintTop_toBottomOf="@id/layout_control"
        app:layout_constraintLeft_toLeftOf="parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="4">

        <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="30dp"
        android:gravity="center"
        android:text="High Hat"
        android:layout_weight="2"/>

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:text="EDIT"
        android:layout_weight="1"/>
    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:text="DELETE"
        android:layout_weight="1"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/beat_2"
        app:layout_constraintTop_toBottomOf="@id/beat_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Kick"
            android:layout_weight="2"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="EDIT"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="DELETE"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/beat_3"
        app:layout_constraintTop_toBottomOf="@id/beat_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Snare"
            android:layout_weight="2"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="EDIT"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="DELETE"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/beat_4"
        app:layout_constraintTop_toBottomOf="@id/beat_3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Keys"
            android:layout_weight="2"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="EDIT"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="DELETE"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/beat_5"
        app:layout_constraintTop_toBottomOf="@id/beat_4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Bass"
            android:layout_weight="2"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="EDIT"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="DELETE"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/beat_6"
        app:layout_constraintTop_toBottomOf="@id/beat_5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Bongo"
            android:layout_weight="2"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="EDIT"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="DELETE"
            android:layout_weight="1"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>